# Docker Compose Environment Variables
# This file should be copied from the root .env file
# Copy command: cp ../../.env .env

# User/Group IDs for file permissions
WWWUSER=1000
WWWGROUP=1000

# Port Forwarding (exposed to host)
FORWARD_DB_PORT=3306
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025
VITE_PORT=5173

# Database Configuration (must match root .env)
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=app123
